.loader {
  border: 4px solid #f3f3f3; /* Light grey background border */
  border-top: 4px solid #3498db; /* Blue top border to create the illusion of spinning */
  border-radius: 50%; /* Makes the div a perfect circle */
  width: 40px;
  height: 40px;
  animation: spin 1s linear infinite; /* Applies the spin animation */
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}